<template>
    <div style="position: absolute">
            <div class="res-top">
                <i @click="fanhui" class="iconfont icon-fanhui"></i>
                <span>{{title}}</span>
            </div>
            <div class="content" ref="content">
                <mt-loadmore :top-method="loadTop" :bottom-method="loadBottom" :bottom-all-loaded="allLoaded" ref="loadmore" :autoFill="false">
                    <ul class="res-ct">
                        <li v-for="(item,index) in news" @click='openDetail(item)'>
                            <div class="res-title">
                                <span v-html="item.title"></span>
                                <span class="tag" :class="classMap[item.sentimentType-1]">{{item.sentimentType | newsTag}}</span>
                            </div>
                            <div class="res-detail">                          
                                <div>
                                    <span>来源:</span>
                                    <span>{{item.threadStarter}}</span>
                                </div>
                                <div>
                                    <span>{{item.publishTime}}</span>
                                </div>
                            </div>
                        </li>
                    </ul>
                <!--     <div slot="top" class="mint-loadmore-top">
                        <span v-show="topStatus !== 'loading'" :class="{ 'rotate': topStatus === 'drop' }">松开加载最新数据</span>
                        <span v-show="topStatus === 'loading'">加载完毕</span>
                    </div> -->
                </mt-loadmore>
            </div>
        <notData v-if="nodata"></notData>
        <ongLoading v-if="!loaded"></ongLoading>
    </div>
</template>
<script>
//引入组件
import Vue from 'vue';
import axios from 'axios';
// import {Loadmore } from 'mint-ui';
import footerTab from 'components/footerTab/footerTab'
import qs from 'qs'
import ongLoading from 'components/pageTips/ongLoading/ongLoading';
import notData from 'components/pageTips/notData/notData';
import {
    Toast
} from 'mint-ui';
import BScroll from 'better-scroll'

export default {
    name: 'advancedSearchRes',
    data() {
        return {
            classMap: ['danger', 'middle', 'safe'],
            messageTypeIndex: 0,
            emotionTypeIndex: 0,
            timeAreaIndex: 0,
            news: [],
            title: "",
            selectedPage: {},
            topStatus: '',
            page: 1,
            pageSize: 10,
            articleId: "123456",
            articleIditem: "",
            popupVisibleContent: false,
            loaded: false,
            nodata: false,
            allLoaded: false,
            newSendObj: {}
        }
    },
    props: {
        resObj: {
            type: Object
        }
    },

    mounted() {
        // setTimeout(this._initScroll, 500)
        this.$nextTick(function(){
           var scrollTop = document.documentElement.scrollTop || window.pageYOffset || document.body.scrollTop;
           console.log(scrollTop)
        })

    },
    methods: {
        openDetail: function(item) {
            this.popupVisibleContent = true;
            //this.selectedPage = item;
            this.articleId = item.id;
            this.articleIditem = item.id;
            //this.$router.push('/detail');
            console.log(this.title)
            this.$router.push({
                name: 'detail',
                params: {
                    id: item.id,
                    title: this.title,
                    userId: this.userId,
                    searchKeys: this.resObj.searchKeys,
                    item:this.newSendObj,
                    themeId:this.resObj.themeId,
                    testIndex:this.resObj.testIndex,
                    dupId:this.resObj.dupId
                }
            });

//            console.log("this.articleId：" + this.articleId);
            //this.$refs.detail.renderDetail(this.articleId);
        },
        recieveMessage: function(txt) {
            if (txt === 'close') {
                this.popupVisibleContent = false;
            }
        },
        _initScroll:function(){
            /* this.keyWordScroll = new BScroll(this.$refs.content, {                  
                    click: true
                });*/
        },

        gaojisousuofn: function() {

            var _this = this;
            this.title = _this.resObj.title;
            _this.nodata = false;
            /*this.resObj.page = this.page;
            this.page++;*/
            this.newSendObj = this.resObj;
            this.newSendObj.page?this.newSendObj.page:1;
//            console.log(JSON.stringify(this.newSendObj))
            axios.post('/themeapp/advancedSearch', qs.stringify(this.newSendObj ))
                .then(function(res) {

                    if(res.data.pager.listPages.length == 0){
                        console.log("查不到");
                        _this.nodata = true;
                        //_this.loaded = false;

                    }


                    if (res.data.resultList) {
                        _this.news = _this.news.concat(res.data.resultList);

                        _this.allLoaded = false;

                       if (_this.newSendObj.page > 1 && parseInt(_this.newSendObj.page) >= parseInt(res.data.pager.allPage) ) {
                            Toast({
                                message: '已加载完成',
                                position: 'middle',
                                duration: 1000,
                                className: 'toast1'
                            });
                            _this.allLoaded = true;
                        }


                        _this.$refs.loadmore.onBottomLoaded();
                        _this.loaded = true;
                       _this.$refs.loadmore.onTopLoaded();

                    } else {
                        _this.loaded = true;

                        //  _this.nodata=true;
                    }

                })
                .catch(function(error) {
                    console.log(error);
                });

        },

        moreSimiliar: function() {
//            console.log("this.loaded: "+this.loaded)
            var _this = this;
            this.title = _this.resObj.title;
            _this.nodata = false;
            _this.loaded = false;
            //this.page++;
            //this.resObj.page=this.page;

            this.newSendObj = this.resObj;

//            console.log("this.newSendObj:"+JSON.stringify(this.newSendObj));
            axios.post('/themeapp/queryThemeArticle', qs.stringify(this.newSendObj))
                .then(function(res) {

                    console.log("res.data.pager.allPage: " + res.data.pager.allPage)
                    console.log("_this.newSendObj.page: " + _this.newSendObj.page)


                    //console.log("res:" + JSON.stringify(res))
                    if (res.data.resultList) {

                        _this.news = _this.news.concat(res.data.resultList);
                        _this.allLoaded = false;
                        if (_this.newSendObj.page > 1 && parseInt(_this.newSendObj.page) >= parseInt(res.data.pager.allPage) ) {
                            Toast({
                                message: '已加载完成',
                                position: 'middle',
                                duration: 1000,
                                className: 'toast1'
                            });
                            _this.allLoaded = true;
                        }

                        _this.$refs.loadmore.onBottomLoaded();
                        _this.loaded = true;





                    } else {
                        _this.loaded = true;
                        //_this.nodata=true;
                    }
                })
                .catch(function(error) {
                    console.log(error);
                });

        },


        fanhui: function() {
            this.page = 1;
            this.news = [];
            this.$emit('fanhuiEvent', 'advancedSearchRes');
        },
        loadTop(id) {
            //刷新列表
            this.newSendObj.page = 1;
            this.news.length = 0;
            if (this.resObj.title == "搜索结果") {
                this.gaojisousuofn();
            };
            if (this.resObj.title == "更多相似文章") {
                this.moreSimiliar();
            };
            this.$refs.loadmore.onTopLoaded();

//            console.log('正在下拉')
        },
        loadBottom(id) {
            // 加载更多数据
              this.newSendObj.page++;
//            console.log('正在上拉加载。。')
            if (this.resObj.title == "搜索结果") {
                this.gaojisousuofn();
            };
            if (this.resObj.title == "更多相似文章") {
                this.moreSimiliar();
            };
            //

            //this.news = (this.news).concat(this.news);
        }
    },
    filters: {
        newsTag: function(value) {
            switch (value) {
                case '1':
                    return '负面'
                    break;
                case '2':
                    return '中性'
                    break;
                case '3':
                    return '正面'
                    break;
                default:
            }
        }
    },
    components: {
        ongLoading,
        notData,
        Toast,
        BScroll
    }
}
</script>
