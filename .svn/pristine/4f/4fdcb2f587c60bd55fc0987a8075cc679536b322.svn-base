                            <ul v-show="item.sub_newShow">
                               <!--  <li class="sub_news" v-for="(sub_news,subIndex) in item.similar.sub_news"
                                 @click='openDetail(sub_news)' v-show="subIndex < 4">
                                    <p class="title_news">{{sub_news.title}}</p>
