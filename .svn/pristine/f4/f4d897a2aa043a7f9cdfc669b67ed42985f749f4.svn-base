<script>
import {
    fetchLogs
} from '../store/personalCenter';
import Vue from 'vue'
import {
    mapState
} from 'vuex'
import BScroll from 'better-scroll'
import {
    Popup,
    Loadmore
} from 'mint-ui';
import axios from 'axios';
import qs from 'qs'
